    <section class="ftco-section ftco-services ftco-no-pt">
      <div class="services-section">
        <div class="col-md-12 col-lg-12 d-flex align-self-stretch ftco-animate">
          <div class="container">
            <div class="media block-6 services d-block">
              <div class="media-body">
                <h3 class="heading text-center mb-3">Vé máy bay</h3>
                <hr />
                <form action="/booking" method = "POST">
                  <div class="row">

                    <div class="col-12 col-lg-12 col-md-12 col-sm-12">
                      <input type="radio" id="motchieu" checked name="bookingFlightType" value="oneWayTicket"/>
                      <label class="" for="motchieu">
                        Một chiều
                      </label>
                      <input type="radio" id="khuhoi" name="bookingFlightType" value="returnTicket" />
                      <label class="" for="khuhoi">
                        Khứ hồi
                      </label>
                    </div>
                    <!-- End col -->

                    <div class="col-6 col-sm-12 col-md-12 col-lg-6">

                      <div class="form-group" style="display: inline-block;">
                        <label for="">Điểm khởi hành</label>
                        <i class="fas fa-plane-departure text-warning"></i>
                        <select name="bookingFrom" class="custom-select" style="display: inline-block; width:100px;">
                          <option value = "" selected>Open this select menu</option>
                          <%if(typeof airPort === 'object'){%>
                            <%for(item of airPort){%>
                              <option value = "<%=item.locationCode%>"><%=item.locationName%></option>
                            <%}%>
                          <%}%>
                        </select>
                      </div>
                      &nbsp;
                      <div class="form-group" style="display: inline-block">
                        <label for="">Điểm đến</label>
                        <i class="fas fa-plane-arrival text-warning"></i>
                        <select name="bookingDestination" class="custom-select" style="display: inline-block; width:100px;">
                          <option value = "" selected>Open this select menu</option>
                          <%if(typeof airPort === 'object'){%>
                            <%for(item of airPort){%>
                              <option value = "<%=item.locationCode%>"><%=item.locationName%></option>
                            <%}%>
                          <%}%>
                        </select>
                      </div>

                      <div class="row">

                        <div class="col">
                          <div class="form-group">
                            <label for="dtp_input2" style="padding: 0">Thời gian khởi hành</label>
                            <div class="input-group date form_date col-md-10" style="padding: 0" data-date="" data-date-format="dd mm yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                              <input class="form-control" size="12" type="text" value="" name="bookingDepartTime" readonly>
                              &nbsp;
                              <!-- <span class="input-group-addon"><span class="glyphicon fas fa-times" style="font-size: 48px;"></span></span>-->
                              <span class="input-group-addon"><span class="glyphicon fas fa-calendar text-warning" style="font-size: 48px;"></span></span>
                            </div>
                            <input type="hidden" id="dtp_input2" value="" /><br/>
                          </div>
                        </div>
                        <!-- End col -->

                        <div class="col">
                          <div class="form-group timeKhuHoi" style="display: none">
                            <label for="dtp_input2" style="padding: 0">Thời gian quay về</label>
                            <div class="input-group date form_date col-md-10" style="padding: 0" data-date="" data-date-format="dd mm yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                              <input class="form-control" size="12" type="text" value="" name="bookingReturnTime" readonly>
                              &nbsp;
                              <!-- <span class="input-group-addon"><span class="glyphicon fas fa-times" style="font-size: 48px;"></span></span>-->
                              <span class="input-group-addon"><span class="glyphicon fas fa-calendar text-warning" style="font-size: 48px;"></span></span>
                            </div>
                            <input type="hidden" id="dtp_input2" value="" /><br/>
                          </div>
                        </div>
                        <!-- End col -->

                      </div>
                      <!-- End row -->

                    </div>
                    <!-- End col -->

                    <div class="col-6 col-sm-12 col-md-12 col-lg-6">

                      <div class="form-group">
                        <label for="">Số lượng khách hàng</label>
                        <i class="fas fa-users text-warning"></i>
                        <input type="number" min="1" max="50" value="1" name="bookingNumberOfCustomer"class="form-control" style="display: inline-block; height: auto !important; width: 10rem" id="" placeholder="Số lượng"/>
                      </div>

                      <div class="form-group">
                        <label for="">Hạng ghế :</label>
                        <select name="bookingSeatClass"class="custom-select" style="display: inline-block; width:200px;">
                          <option value = "" selected>Open this select menu</option>
                          <%if(typeof seatType === 'object'){%>
                            <%for(item of seatType){%>
                              <option value = "<%=item.locationCode%>"><%=item.name%></option>
                            <%}%>
                          <%}%>
                        </select>
                      </div>

                      <div class="form-group">
                        <div class="icon"><span class="flaticon-seats"></span></div>
                        <button type="submit" class="mt-3 btn btn-outline-primary float-right"><i class="fas fa-search">&nbsp; Tìm chuyến bay</i></button>
                      </div>

                    </div>
                    <!-- End col -->

                  </div>
                  <!-- End row -->
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

