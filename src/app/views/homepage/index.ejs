    <section class="hero-wrap js-fullheight" style="background-image: url('homepage/images/airplane_sky_flight_clouds_sunset_116695_3840x2400.jpg');background-position: center;" data-section="home">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-start" data-scrollax-parent="true">
          <div class="col-md-8 ftco-animate mt-5" data-scrollax=" properties: { translateY: '70%' }">
            <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
              Chúng tôi sẽ mang đến cho bạn một trải nghiệm tuyệt vời
            </h1>
            <p class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
